<Page x:Class="MillionaireGame.UI.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MillionaireGame.UI"
      mc:Ignorable="d" 
      
      Title="AdminPage" Height="495" Width="600">

    <Grid Background="Black" Height="495" Width="600">
        <DataGrid HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="dataGridQuestions" Background="White" Height="190" Width="580" Margin="0,40,0,0"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" Foreground="White" Text="Add new question to DataBase :"/>
        <TextBox x:Name="textBoxNewQuestion" HorizontalAlignment="Left" Height="23" Margin="10,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="570"/>
        <TextBlock x:Name="textBlockCorrectAnswer" HorizontalAlignment="Left" Margin="10,450,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" Foreground="White" Text="Correct Answer :"/>
        <TextBlock x:Name="textBlockAllAnswers" HorizontalAlignment="Left" Margin="10,284,0,0" TextWrapping="Wrap" Text="All Answers :" VerticalAlignment="Top" Width="570" Foreground="White"/>
        <TextBox x:Name="textBoxAnswerA" HorizontalAlignment="Left" Height="23" Margin="32,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <TextBox x:Name="textBoxAnswerB" HorizontalAlignment="Left" Height="23" Margin="32,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <TextBox x:Name="textBoxAnswerC" HorizontalAlignment="Left" Height="23" Margin="32,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <TextBox x:Name="textBoxAnswerD" HorizontalAlignment="Left" Height="23" Margin="32,408,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <TextBox x:Name="textBoxCorrectAnswer" HorizontalAlignment="Left" Height="23" Margin="110,450,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30"/>
        <TextBlock x:Name="textBlockA" HorizontalAlignment="Left" Margin="10,304,0,0" TextWrapping="Wrap" Text="A:" VerticalAlignment="Top" Foreground="White" Height="22" Width="17"/>
        <TextBlock x:Name="textBlockB" HorizontalAlignment="Left" Margin="10,339,0,0" TextWrapping="Wrap" Text="B:" VerticalAlignment="Top" Foreground="White" Height="22" Width="17"/>
        <TextBlock x:Name="textBlockC" HorizontalAlignment="Left" Margin="10,373,0,0" TextWrapping="Wrap" Text="C:" VerticalAlignment="Top" Foreground="White" Height="22" Width="17"/>
        <TextBlock x:Name="textBlockD" HorizontalAlignment="Left" Margin="10,408,0,0" TextWrapping="Wrap" Text="D:" VerticalAlignment="Top" Foreground="White" Height="22" Width="17"/>
        <Button x:Name="buttonEdit" Content="Edit" HorizontalAlignment="Left" Margin="505,450,0,0" Foreground="White" VerticalAlignment="Top" Width="75" Click="buttonEdit_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF005383" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="buttonAdd" Content="Add" HorizontalAlignment="Left" Margin="317,450,0,0" Foreground="White" VerticalAlignment="Top" Width="75" Click="buttonAdd_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF005383" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="buttonDelete" Content="Delete" HorizontalAlignment="Left" Margin="412,450,0,0" Foreground="White" VerticalAlignment="Top" Width="75" Click="buttonDelete_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF005383" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="buttonBack" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" BorderThickness="0" Width="50" Margin="0,0" Click="buttonBack_Click">
            <Image Source="Images/back.png"/>
        </Button>
    </Grid>
</Page>
